# Move focus using command + arrow keys
# Swap window with adjacent windows
# Swap window with adjacent windows
alt - left  : yabai -m window --swap west
alt - right : yabai -m window --swap east
alt - up    : yabai -m window --swap north
alt - down  : yabai -m window --swap south

# Move window to adjacent space
shift + alt - left  : yabai -m window --space prev; yabai -m window --focus
shift + alt - right : yabai -m window --space next; yabai -m window --focus


# Toggle full screen using command + F
#cmd - f : yabai -m window --toggle zoom-fullscreen

# Shrink window dimensions using command + M
cmd - m : yabai -m window --resize left:0:-100; yabai -m window --resize top:0:-100


# Resize windows using shift + command + arrow keys
shift + cmd - left : yabai -m window --resize left:-20:0
shift + cmd - right : yabai -m window --resize right:20:0
shift + cmd - down : yabai -m window --resize bottom:0:20
shift + cmd - up : yabai -m window --resize top:0:-20

